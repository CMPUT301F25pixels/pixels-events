<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09101D">

    <FrameLayout
        android:id="@+id/notiPrefTopBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/notiPrefBackButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#00FFF8F8"
            app:srcCompat="@drawable/_arrow_back_30"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settingsBottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2B44BA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/settingsHomeButton"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00FFF8F8"
                app:srcCompat="@drawable/outline_home_30"/>

            <ImageButton
                android:id="@+id/settingsQRButton"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00FFF8F8"
                app:srcCompat="@drawable/outline_home_30" />
            <ImageButton
                android:id="@+id/settingsMyEventsButton"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00FFF8F8"
                app:srcCompat="@drawable/outline_home_30"/>
            <ImageButton
                android:id="@+id/settingsActiveButton"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00FFF8F8"
                app:srcCompat="@drawable/outline_home_30"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/notiPrefTopBar"
        app:layout_constraintBottom_toTopOf="@id/settingsBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="409dp"
        android:layout_height="669dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#FAFAFA"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_launcher_foreground"
            />

        <TextView
            android:id="@+id/settingsUsernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7F223E80">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/notifAllText"
                        android:layout_width="350dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="All Notifications"
                        android:paddingLeft="20dp"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/rounded_textview"/>
                    <Button
                        android:id="@+id/notifAllButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="18dp"
                        android:text="" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/notifWinText"
                        android:layout_width="350dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="Win Notifications"
                        android:paddingLeft="20dp"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/rounded_textview"/>
                    <Button
                        android:id="@+id/notifWinButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="18dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/notifLoseText"
                        android:layout_width="350dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="Lose Notifications"
                        android:paddingLeft="20dp"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/rounded_textview"/>
                    <Button
                        android:id="@+id/notifLoseButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="18dp"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>