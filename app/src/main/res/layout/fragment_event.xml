<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:background="@color/dark_bg">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageButton
                android:id="@+id/event_fragment_backbutton"
                android:layout_width="47dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/event_fragment_poster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Event Poster"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_image"
                app:shapeAppearanceOverlay="@style/RoundedImageCorners" />

            <TextView
                android:id="@+id/event_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/event_fragment_preview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="Preview Event page"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/event_fragment_edit_page"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="Edit Event page"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/event_fragment_set_registration"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="Set Registration Period"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/event_fragment_SetWaitlistSize"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="Set Max Waitlist Size"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/event_fragment_waitinglist"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="View waitlist"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/event_fragment_cancelled_participants"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="Cancelled Participants"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="16sp" />


            <Button
                android:id="@+id/event_fragment_draw_lottery"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="Draw Lottery"
                android:clickable="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/event_fragment_notificationspreferences"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="Notification Preferences"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/event_fragment_deleteevent"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#B00020"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/poppins"
                android:text="Delete Event"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>