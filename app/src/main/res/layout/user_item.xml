<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/view_event_bg"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:elevation="3dp">


    <ImageView
        android:id="@+id/item_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"/>

            <TextView
                android:id="@+id/item_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/item_profile_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:contentDescription="Delete profile"
        android:src="@android:drawable/ic_menu_delete"
        android:visibility="gone"
        app:tint="@color/red" />

    <TextView
        android:id="@+id/item_profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        android:textStyle="bold"/>

</LinearLayout>
