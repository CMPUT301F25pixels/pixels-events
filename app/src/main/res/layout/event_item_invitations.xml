<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/view_event_bg"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/invitation_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_image"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/invitation_org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC Company"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/invitation_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invitation_date"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="6:00 AM"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/invitation_location"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:text="Edmonton"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/invitation_accept"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="0.05"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_accept"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Accept"
            app:tint="@color/green" />

        <ImageButton
            android:id="@+id/invitation_decline"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="0.05"
            android:src="@drawable/ic_decline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Decline"
            app:tint="@color/red" />

    </LinearLayout>
</LinearLayout>
