<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:background="@color/dark_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/editprofile_backbutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/editprofile_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_foreground"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/editprofile_imageView"
            app:layout_constraintTop_toTopOf="@+id/editprofile_imageView"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editprofile_user_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Full name"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/white"
                android:background="@drawable/view_rounded_text"
                android:padding="16dp"
                android:inputType="textPersonName"
                android:fontFamily="@font/poppins"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp" />

            <EditText
                android:id="@+id/editprofile_user_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Email address"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/white"
                android:background="@drawable/view_rounded_text"
                android:padding="16dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toBottomOf="@id/editprofile_user_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/editprofile_user_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/editprofile_user_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editprofile_user_entrant"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/toggle_button_bg_tint_blue"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Entrant"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editprofile_user_organizer"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/toggle_button_bg_tint_blue"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Organizer"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <LinearLayout
                android:id="@+id/editprofile_gender_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/editprofile_user_role"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center">

                <!-- Gender Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/editprofile_user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    android:padding="0dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/editprofile_gender_male"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingHorizontal="12dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/toggle_button_bg_tint_blue"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/editprofile_gender_female"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingHorizontal="12dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/toggle_button_bg_tint_blue"
                        android:text="F"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/editprofile_gender_other"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingHorizontal="12dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/toggle_button_bg_tint_blue"
                        android:text="Other"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </com.google.android.material.button.MaterialButtonToggleGroup>


                <!-- Phone Field -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Phone Number"
                    android:id="@+id/editprofile_user_phone"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:textSize="16sp"
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/white"
                    android:background="@drawable/view_rounded_text"
                    android:padding="16dp"
                    android:fontFamily="@font/poppins" />

            </LinearLayout>


            <Button
                android:id="@+id/editprofile_user_save"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/accent_blue"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@id/editprofile_gender_phone_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" />

            <!-- Address fields -->
            <EditText
                android:id="@+id/editprofile_user_postalcode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Postal Code"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/white"
                android:background="@drawable/view_rounded_text"
                android:padding="16dp"
                android:inputType="textPostalAddress"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/editprofile_user_province"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Province"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/white"
                android:background="@drawable/view_rounded_text"
                android:padding="16dp"
                android:inputType="text"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/editprofile_user_city"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="City"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/white"
                android:background="@drawable/view_rounded_text"
                android:padding="16dp"
                android:inputType="text"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>