<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1A3D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Event Poster -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#D9D9D9"
                android:contentDescription="@string/event_poster" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Event Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fri, Oct 29, 2:00 PM - 6:00 PM"
            android:textColor="#D1D5DB"
            android:textSize="14sp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Lorem ipsum dolor sit amet..."
            android:textColor="#F3F4F6"
            android:textSize="15sp" />

        <!-- Status (e.g., 'You’re on the waiting list') -->
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="#A7F3D0"
            android:textSize="14sp" />

        <!-- Join / Leave Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cta"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Join"
            android:textColor="#FFFFFF"
            app:iconTint="#FFFFFF"
            app:strokeColor="#3B82F6"
            android:backgroundTint="#1E40AF" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#233155" />

        <!-- Section: Information -->
        <TextView
            android:id="@+id/info_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <!-- About Event header -->
        <TextView
            android:id="@+id/about_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="  About Event:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#FFFFFF" />

        <!-- About Event body (reuse description text if you want) -->
        <TextView
            android:id="@+id/about_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="(Same as description above)"
            android:textColor="#F3F4F6"
            android:textSize="14sp" />

        <!-- Lottery header -->
        <TextView
            android:id="@+id/lottery_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="  How the Lottery works:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#FFFFFF" />

        <!-- Step 1 -->
        <TextView
            android:id="@+id/lottery_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="•  Step 1: Join the Waitlist if registration is open."
            android:textColor="#F3F4F6"
            android:textSize="14sp" />

        <!-- Step 2 -->
        <TextView
            android:id="@+id/lottery_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="•  Step 2: Watch for an acceptance/denial notification or check the Notifications tab for updates."
            android:textColor="#F3F4F6"
            android:textSize="14sp" />

        <!-- Step 3 -->
        <TextView
            android:id="@+id/lottery_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="•  Step 3: If accepted, accept or decline the invite. Otherwise, better luck next time."
            android:textColor="#F3F4F6"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
