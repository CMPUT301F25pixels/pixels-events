<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:background="@drawable/bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".home.DashboardFragment">

    <LinearLayout
        android:id="@+id/dashboard_filters_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dashboard_filters_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter events"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:scrollbars="none">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/dashboard_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="0dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_adventure"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventure"
                    app:checkedIconVisible="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/toggle_button_bg_tint_blue"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cultural"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cultural"
                    app:checkedIconVisible="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/toggle_button_bg_tint_blue"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_religious"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Religious"
                    app:checkedIconVisible="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/toggle_button_bg_tint_blue"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_educational"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Educational"
                    app:checkedIconVisible="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/toggle_button_bg_tint_blue"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_workshop"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workshop"
                    app:checkedIconVisible="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/toggle_button_bg_tint_blue"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_networking"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Networking"
                    app:checkedIconVisible="false"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/toggle_button_bg_tint_blue"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dashboard_start_date"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:text="Start date"
                android:textColor="@color/white"
                android:background="@drawable/view_rounded_text"/>
            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/dashboard_end_date"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:text="End date"
                android:textColor="@color/white"
                android:background="@drawable/view_rounded_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/dashboard_apply_filters"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Apply"
                android:backgroundTint="@color/accent_blue"
                android:textColor="@color/white"/>
            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/dashboard_clear_filters"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Clear"
                android:backgroundTint="@color/cancel_button"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboard_eventRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_filters_container"
        tools:listitem="@layout/event_item_big" />

</androidx.constraintlayout.widget.ConstraintLayout>