<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/notification_recipient_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radio_all_waitlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Waitlist Entrants"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Entrants (Winners)"/>

        <RadioButton
            android:id="@+id/radio_cancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelled Entrants"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/notification_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="top|start"
        android:hint="Enter your message here..."
        android:inputType="textMultiLine"
        android:background="@drawable/view_rounded_text"
        android:padding="12dp"/>

</LinearLayout>


