<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:background="@drawable/view_event_bg"
    android:paddingStart="15dp"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:minHeight="130dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/eventListImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sample_image"
            android:scaleType="centerCrop"
            android:contentDescription="Event Image"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="ABC Company"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/eventListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Event Title"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/eventListTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 1, 2026 - Jan 2 2026"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/eventListLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edmonton, AB"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/eventListStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textColor="@color/status_not_selected"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:layout_gravity="top"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/admin_event_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Delete event"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/red"
            android:visibility="gone"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never">
            <LinearLayout
                android:id="@+id/eventTagsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</FrameLayout>
