<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:padding="24dp">

    <TextView
        android:id="@+id/text_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_description"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join events through lottery"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/text_welcome_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_signup"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Sign up free"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/accent_blue"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/text_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_google"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/button_google"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue with Google"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/card_bg"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/button_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_apple"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/button_apple"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue with Apple"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/card_bg"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/button_google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_login"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textColor="@color/accent_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/button_apple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

