<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <include
        android:id="@+id/bottom_nav"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/settingsProfileText"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Profile"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:textSize="28sp" />

        <ImageView
            android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/settingsUsernameText"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Username"
                android:textColor="@color/white"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/settingsViewProfButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
                android:text="View Profile"
                android:textColor="@color/white"
                android:textSize="16sp" />

        <Button
            android:id="@+id/settingsRegHisButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
            android:text="Registration History"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        <Button
            android:id="@+id/settingsNotiPrefButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
            android:text="Notification Preferences"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        <Button
            android:id="@+id/settingsLogOutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/card_bg"
                android:fontFamily="@font/poppins"
            android:text="Logout"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        <Button
            android:id="@+id/settingsDelAccButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#B00020"
                android:fontFamily="@font/poppins"
            android:text="Delete Account"
                android:textColor="@color/white"
                android:textSize="16sp"/>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>