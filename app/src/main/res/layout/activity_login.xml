<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- App title -->
    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/text_login_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Entrant button -->
    <Button
        android:id="@+id/button_entrant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrant"
        android:layout_marginBottom="12dp" />

    <!-- Organizer button -->
    <Button
        android:id="@+id/button_organizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organizer"
        android:layout_marginBottom="8dp" />

    <!-- Admin button -->
    <Button
        android:id="@+id/button_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:layout_marginBottom="24dp" />

    <!-- Access code field used for Organizer/Admin -->
    <EditText
        android:id="@+id/edit_access_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Access code (Organizer/Admin)"
        android:inputType="textPassword" />

</LinearLayout>
